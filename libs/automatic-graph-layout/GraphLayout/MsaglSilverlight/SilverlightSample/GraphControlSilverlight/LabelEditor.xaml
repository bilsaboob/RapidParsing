<UserControl x:Class="Microsoft.Msagl.GraphControlSilverlight.LabelEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="200" Height="Auto" >
    <Border BorderBrush="Black" BorderThickness="1" Padding="2" Margin="2" Background="White">
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Margin="1" Padding="2" Grid.Row="1" />
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="1" Padding="2" Grid.Row="1" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>